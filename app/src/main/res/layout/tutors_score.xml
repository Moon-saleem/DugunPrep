<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tutors_Scored"
    style="@style/RoundShapeTheme"
    android:background="@drawable/main_activity_box_background"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/score_image"
        android:layout_height="wrap_content"
        android:src="@drawable/layer2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/third_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="#5638fd"
        android:text="@string/tutors_scored"
        android:textStyle="bold"
        android:gravity="center"/>



</RelativeLayout>